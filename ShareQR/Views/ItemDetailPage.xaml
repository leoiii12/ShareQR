<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShareQR.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="URL:" FontSize="Medium" />
        <Label Text="{Binding Item.Data}" FontSize="Small"/>
        <Label Text="Create Date:" FontSize="Medium" />
        <Label Text="{Binding Item.CreateDate}" FontSize="Small"/>
        <Image Source="{Binding Item.Path}"></Image>
    </StackLayout>
</ContentPage>